package Fundamentos;

public class OperadoresLogicos {
	
	
	public static void main(String[] args) {
		boolean execTrab01 = true;
		boolean execTrab02 = true;
		
		boolean buyIcecream = execTrab01 || execTrab02;
		boolean buyTv50 = execTrab01 && execTrab02;
		boolean buyTv32 = execTrab01 ^ execTrab02;
		
		if (buyIcecream == true) {
			System.out.println("Você comprará sorvete!");
		} else {
			System.out.println("Você não Comprará sorvete! Vai nem sair de casa otário.");
		}
		
		if ( buyTv50 == true) {
			System.out.println("Você comprará uma TV de 50'");
		} else {
			System.out.println("Você não comprará uma TV de 50'");
		}
		
		if (buyTv32 == true) {
			System.out.println("Você comprará uma TV de 32'");
		} else {
			System.out.println("Você não comprará uma de TV de 32'");
		}
		
		
	}

}
